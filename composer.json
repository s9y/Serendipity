{
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.zendframework.com/"
        }
    ],
    "require": {
        "php": "~7.0",
        "katzgrau/klogger": "1.0.*",
        "php81_bc/strftime": "^0.5.0",
        "smarty/smarty": "^4.3",
        "voku/simple-cache": "4.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "apcu-autoloader": true,
        "optimize-autoloader": true,
        "github-protocols": [
            "git",
            "https",
            "http"
        ],
        "platform": {
            "php": "7.1"
        },
        "sort-packages": true,
        "vendor-dir": "bundled-libs"
    }
}
